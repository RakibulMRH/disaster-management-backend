{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"], // Type definitions for TypeScript
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src", // Ensure this is set to the root directory
    "outDir": "./dist", // Output directory for compiled files
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src", // Base URL for module resolution
    "paths": {
      "@/*": ["./*"] // Alias for imports
    }
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}